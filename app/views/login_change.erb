<div class="container py-5">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-8 mx-auto">

          <!-- form card login -->
          <div class="card rounded-0">
            <div class="card-header">
              <h3 class="mb-0">パスワード変更</h3>
            </div>
            <div class="card-body">
              <form class="form" role="form" action="<%= link_login_to "change" %>" autocomplete="off" id="formLogin" novalidate="" method="POST">
                <div class="form-group">
                  <label for="user">ユーザID</label>
                  <input type="text" class="form-control form-control-lg rounded-0" name="user" id="user" required="">
                </div>
                <div class="form-group">
                  <label>古いパスワード</label>
                  <input type="password" class="form-control form-control-lg rounded-0" id="old_pass" name="old_pass" required="" autocomplete="new-password">
                </div>
                <div class="form-group">
                  <label>新しいパスワード</label>
                  <input type="password" class="form-control form-control-lg rounded-0" id="new_pass" name="new_pass" required="" autocomplete="new-password">
                </div>

                <button type="submit" class="btn btn-outline-primary" id="btnLogin">変更</button>

              </form>

            </div>
            <!--/card-block-->
          </div>
          <!-- /form card login -->

        </div>


      </div>
      <!--/row-->

    </div>
    <!--/col-->
  </div>
  <!--/row-->
</div>